---
import Header from "../components/Header.astro";
import BaseLayout from "./BaseLayout.astro";

const {
    frontmatter: { title, author, pubDate, description, image, tags },
} = Astro.props;
---

<BaseLayout pageTitle={title}>
    <div class="tags">
        {
            tags.map((tag) => (
                <p class="tag">
                    <a href={`/tags/${tag}`}>{tag} </a>{" "}
                </p>
            ))
        }
    </div>

    <p>
        Written by {author} on {
            new Intl.DateTimeFormat("en-US").format(new Date(pubDate))
        }
    </p>

    <p><em>{description}</em></p>

    <img src={image.url} width="300" alt={image.alt} />

    <slot />
</BaseLayout>

<style>
    a {
      color: #00539F;
    }
          
    .tags {
      display: flex; 
      flex-wrap: wrap; 
      margin: 0 auto;  
    }
  
    .tag {
      margin: 0.25em;
      border: dotted 1px #a1a1a1;
      border-radius: .5em;
      padding: .5em 1em;
      font-size: 1.15em;
      background-color: #F8FCFD;
    }
  </style>